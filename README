			filter : 
                function(data, input) {
					input = jQuery(input);
					var re = new RegExp(input.val().replace($.fn.flexcomplete.reReplace, ''), "i");
					return jQuery(data).filter(function(i) {
							return re.test(data[i].replace($.fn.flexcomplete.reReplace, ''));
						}); 
				},
