<script src="flexcomplete.js"></script>

<script type="text/javascript">

$(function(){

	$('#textbox').click(
		function(){
			$('#id').focus();
		});
	
	$('#id').flexcomplete(
		{
			width: 300,
			method : 'POST',
			showTooltip : true,
			onSelect : function(val, input) {
			
				var self = this;
				
				self.data(jQuery.grep(self.data(), function(e){ return val != e;}));
				
				var item = $("<span class='item'>" + val + "<span class='remove-item'>x</span></span>")
					.find('.remove-item')
					.click(function(){
						item.remove();
						self.data().push(val);
					}).end();
				$('#container').append(item);
				
				input.value = '';
			},
<<<<<<< HEAD
